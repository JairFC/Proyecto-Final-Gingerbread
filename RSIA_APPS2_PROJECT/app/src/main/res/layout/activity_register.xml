<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    android:padding="13dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_weight=".3"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="REGISTRO"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25dp"
        />

     <LinearLayout
         android:padding="10dp"
         android:layout_gravity="center"
         android:gravity="center"
         android:orientation="vertical"
         android:layout_width="150dp"
         android:layout_height="150dp">

         <androidx.cardview.widget.CardView
             android:id="@+id/cardView4"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             app:cardCornerRadius="15dp">

             <ImageView
                 android:id="@+id/imgVwProfilePic"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 app:srcCompat="@drawable/ic_settings_cell_black_24dp"
                 tools:ignore="VectorDrawableCompat"
                 tools:srcCompat="@tools:sample/avatars" />


         </androidx.cardview.widget.CardView>
     </LinearLayout>







    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="3">


        <EditText
            android:layout_marginVertical="5dp"
            android:id="@+id/Rnombre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_redondo"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:ems="10"
            android:hint="Nombre"
            android:imeOptions="actionSearch"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16dp"
            />

        <EditText
            android:layout_marginVertical="5dp"
            android:id="@+id/Rapellido_pat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_redondo"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:ems="10"
            android:hint="Apellido"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16dp"
            />

        <EditText
            android:layout_marginVertical="5dp"
            android:id="@+id/Remail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_redondo"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16dp"
            />

        <EditText
            android:layout_marginVertical="5dp"
            android:id="@+id/Rpassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_redondo"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:maxLength="30"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16dp"
            />

        <EditText
            android:layout_marginVertical="5dp"
            android:id="@+id/R2password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_redondo"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:ems="10"
            android:hint="Repita Contraseña"
            android:inputType="textPassword"
            android:maxLength="30"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16dp"
            />


        <EditText
            android:layout_marginVertical="5dp"
            android:id="@+id/Rtel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/text_redondo"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableLeft="@drawable/ic_settings_cell_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Celular"
            android:maxLength="16"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16dp"
            />




     </LinearLayout>


    <LinearLayout
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/Rregistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="80dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/boton_redondo2"
            android:text="Registrarme"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:ignore="InvalidId">

        </ProgressBar>

    </LinearLayout>


</LinearLayout>








